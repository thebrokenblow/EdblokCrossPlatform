<UserControl
    x:Class="EdblokCrossPlatform.Views.FiguresUI.Circle"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:figuresVm="clr-namespace:EdblokCrossPlatform.ViewModels.Figures"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Design.DataContext>
        <figuresVm:Circle />
    </Design.DataContext>

    <Ellipse
        Width="{Binding Width}"
        Height="{Binding Height}"
        Fill="{Binding Color}" />
</UserControl>
